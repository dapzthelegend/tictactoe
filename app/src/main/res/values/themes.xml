<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/chambray</item>
        <item name="colorPrimaryVariant">@color/astronaut</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/chambray</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/chambray</item>
        <item name="colorSecondaryVariant">@color/chambray</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar  -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/chambray</item>

    </style>

    <style name="AppTheme.BackgroundStyle">
        <item name="android:background">@android:color/background_light</item>
    </style>

    <style name="AppTheme.SurfaceStyle">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@color/chambray</item>
    </style>

    <style name="AppTheme.FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/chambray</item>
        <item name="backgroundTint">@color/astronaut</item>
    </style>

    <!--Text appearances-->
    <style name="TextAppearance.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textHeadline</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextAppearance.CardTitle" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textBody</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/textBody</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Button.RoundedCorners" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button_background</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@drawable/text_selector</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Edittext appearances-->
    <style name="Edittext.Body" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textBody</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>